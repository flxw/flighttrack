.markdown-content-editor
  font-size 10pt
  font-family: "Roboto Mono", Menlo, monospace

.story-title
  font-size 28px
  display inline-block
  font-weight 400


.story-dates
  font-family: Roboto,'Helvetica Neue',sans-serif
  font-size 24px
  font-weight 100
  color rgba(0,0,0,0.45)
  display inline-block
  padding-left 5px

.story-view
  padding 0px 24px
  font-family: Roboto,'Helvetica Neue',sans-serif
  font-weight: 400

  p
    font-family: 'Libre Baskerville', serif;
    font-size 14px

  h1
    font-size 28px

  h2
    font-size 24px

  h3
    font-size 20px

  h4
    font-size 18px

  h5
    font-size 16px

  h1, h2, h3, h4, h5
    font-weight: 400

  img
    width 90%
    margin 10% 5%

.md-calendar-day-header
  background rgb(224,224,224)

.md-datepicker-calendar-pane
  background white

.story-editor
  md-list-item
    position relative

  .right-control
    margin-left 16px
    position absolute
    right 16px
    top 50%
    -webkit-transform translate3d(0,-50%,0)
    transform translate3d(0,-50%,0)

md-dialog img
  max-height 80vh
  max-width 1240px